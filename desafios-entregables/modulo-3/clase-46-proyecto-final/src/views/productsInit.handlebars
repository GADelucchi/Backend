<div>
    <br>
    <a href="/login">
        <button>Iniciar sesión</button>
    </a>
    <hr>
    <br>
    <h1>Productos</h1>
    <hr>
    <div>
        {{#each docs}}
        <li style="list-style: none;">
            <img src="{{this.thumbnail}}" alt="Imagen del producto">
            <h2>{{this.title}}</h2>
            <p>Precio: ${{this.price}}</p>
            <p>Stock: {{this.stock}}</p>
            <p style="display: none">Id: {{this.id}}</p>
            <button>Ver más</button>
            <button>Agregar al carrito</button>
            <br>
            <br>
            <br>
            <hr>
        </li>
        {{/each}}
    </div>

    <center>
        {{#if hasPrevPage}}
        <a href="/api/products?page={{prevPage}}">
            <button>Anterior</button>
        </a>
        {{/if}}
        <strong>Página {{this.page}} de {{this.totalPages}}</strong>
        {{#if hasNextPage}}
        <a href="/api/products?page={{nextPage}}">
            <button>Siguiente</button>
        </a>
        {{/if}}
    </center>
</div>