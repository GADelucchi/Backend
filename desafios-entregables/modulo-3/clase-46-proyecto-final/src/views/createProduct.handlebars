<div>
    <h1>Crear producto</h1>
    <br />
    <form action="/api/products" method="POST" enctype="multipart/form-data">
    <input type="text" name="title" placeholder="Nombre del producto" />
    <br />
    <br />
    <input
        type="text"
        name="description"
        placeholder="Descripción del producto"
    />
    <br />
    <br />
    <input type="number" name="price" placeholder="Precio del producto" />
    <br />
    <br />
    <input type="number" name="stock" placeholder="Stock disponible" />
    <br />
    <br />
    <input type="text" name="category" placeholder="Categoría del producto" />
    <br />
    <br />
    <input type="text" name="code" placeholder="Código único del producto" />
    <br />
    <br />
    <input
        type="file"
        accept="image/*"
        name="thumbnail"
        placeholder="Imagen del producto"
    />
    <br />
    <br />
    <a href="/api/products/paginated">
        <button>Crear Producto</button>
    </a>
    </form>
</div>